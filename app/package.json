{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install-prod": "../../node_modules/.bin/yarn install --prod=true --pure-lockfile",
    "pack": "zip -r -q ../../dist/budget.zip config dist ./bin/environment node_modules package.json",
    "build": "./node_modules/.bin/tslint --force 'src/**/*.ts' && ./node_modules/.bin/tsc --project tsconfig.build.json",
    "build-dev": "./node_modules/.bin/tsc --watch --project tsconfig.build.json",
    "start": "./bin/environment node dist/app.js",
    "start-dev": "./bin/environment node_modules/.bin/nodemon dist/app.js",
    "typeorm-config": "node ./dist/bin/db-config.js > ormconfig.json",
    "migrate": "./bin/environment node ./dist/bin/db-config.js > ormconfig.json && node ../node_modules/typeorm/cli migration:run",
    "migrate-undo": "./bin/environment node ./dist/bin/db-config.js > ormconfig.json && node ../node_modules/typeorm/cli migration:revert",
    "script": "bin/environment node dist/bin/script.js",
    "apidoc": "./node_modules/.bin/apidoc -i src/application/controllers -o public/static/doc",
    "tslint": "./node_modules/.bin/tslint 'src/**/*.ts'",
    "load-test-data": "SM_ENV=test node ./dist/bin/clear-db && SM_ENV=test yarn migrate && SM_ENV=test node ./dist/bin/load-test-data",
    "test": "SM_ENV=test SM_DB_NAME=test_db jest -i",
    "update": "rm -rf node_modules && rm -rf yarn.lock && yarn cache clean && yarn"
  },
  "dependencies": {
    "@c7s/http-errors": "c7s/http-errors#master",
    "@chaika/config": "VlasenkoPavel/config#master",
    "@chaika/core": "VlasenkoPavel/core#ver-0.0.2-new-conf",
    "@chaika/test": "VlasenkoPavel/test#master",
    "infersify-context": "VlasenkoPavel/infersify-context#master",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.8.1",
    "express": "4.16.3",
    "inversify": "5.0.1",
    "inversify-binding-decorators": "4.0.0",
    "inversify-inject-decorators": "^3.1.0",
    "lodash": "4.4.0",
    "log4js": "3.0.6",
    "pg": "7.4.3",
    "reflect-metadata": "0.1.12",
    "routing-controllers": "0.7.7",
    "source-map-support": "0.5.6",
    "tsconfig-paths": "3.3.2",
    "typeorm": "0.2.11",
    "uuid": "^3.3.2",
    "yargs": "11.0.0"
  },
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/inversify-inject-decorators": "^2.0.0",
    "@types/jest": "^24.0.6",
    "@types/lodash": "^4.14.120",
    "@types/node": "8.0.46",
    "@types/supertest": "^2.0.7",
    "@types/uuid": "^3.4.4",
    "@types/yargs": "11.0.0",
    "apidoc": "0.17.6",
    "jest": "^24.1.0",
    "nodemon": "1.17.5",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.0",
    "tslint": "5.12.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "3.3.3"
  }
}
